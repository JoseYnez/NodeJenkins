pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
                echo 'Construyendo la Aplicación' 
            }
        }
        stage('Test') { 
            steps {
                def contenedortest = docker.image('node:4.6')
                contenedortest.pull()
                contenedortest.inside {
                sh 'npm install --only=dev'
                sh 'npm test'
                } 
            }
        }
        stage('Deploy') { 
            steps {
                echo 'Desplegando al área de desarrollo' 
            }
        }
    }
    post { 
        always { 
            echo 'Siempre se ejecuta'
        }
    }
}